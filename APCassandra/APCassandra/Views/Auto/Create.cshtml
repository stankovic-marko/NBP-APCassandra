@model APCassandra.Controllers.AutoController
@{
    ViewData["Title"] = "Create";
}

<div>
    <h1>Create new Ad</h1>
    <div class="card p-5">

        <form enctype="multipart/form-data" method="post">

            <div class="input-group mb-3 w-50">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Brand</label>
                </div>
                <select asp-for="Auto.Brand" name="Brand" class="custom-select" id="inputGroupSelect01">
                    <option selected>Choose...</option>
                    <option value="BMW">BMW</option>
                    <option value="Mercedes">Mercedes</option>
                    <option value="Renault">Renault</option>
                    <option value="Fiat">Fiat</option>
                </select>
            </div>

            <div class="input-group input-group-sm mb-3 w-50">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Model</span>
                </div>
                <input asp-for="Auto.Model" name="Model" type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>

            <div class="input-group input-group-sm mb-3 w-50">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Power</span>
                </div>
                <input asp-for="Auto.Power" name="Power" type="number" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>

            <div class="input-group input-group-sm mb-3 w-50">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Engine Volume</span>
                </div>
                <input asp-for="Auto.Volume" name="Volume" type="number" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>

            <div class="input-group mb-3 w-50">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Type</label>
                </div>
                <select asp-for="Auto.Type" name="Type" class="custom-select" id="inputGroupSelect01">
                    <option selected>Choose...</option>
                    <option value="Convertible">Convertible</option>
                    <option value="Coupé">Coupé</option>
                    <option value="Hatchback">Hatchback</option>
                    <option value="Limousine">Limousine</option>
                </select>
            </div>

            <div class="input-group input-group-sm mb-3 w-50">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Year</span>
                </div>
                <input asp-for="Auto.Year" name="Year" type="number" value="2021" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>

            <div class="input-group input-group-sm mb-3 w-50">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Price €</span>
                </div>
                <input asp-for="Auto.Price" name="Price" type="number" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>

            <div class="input-group input-group-sm mb-3 w-50">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Color</span>
                </div>
                <input asp-for="Auto.Color" name="Color" type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>

            <div class="input-group input-group-sm mb-3 w-50">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">+381</span>
                </div>
                <input asp-for="Auto.Contact" name="Contact" type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>

            <div class="input-group mb-3 w-50">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Fuel</label>
                </div>
                <select name="Fuel" class="custom-select" id="inputGroupSelect01">
                    <option selected>Choose...</option>
                    <option value="Petrol">Petrol</option>
                    <option value="Diesel">Diesel</option>
                    <option value="Electric">Electric</option>
                </select>
            </div>

            <div class="input-group input-group-sm mb-3 w-50">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Equipment</span>
                </div>
                <input asp-for="Auto.EquipmentList" name="EquipmentList" type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>


            <!-- images list -->
            <dl>
                <dt>
                    <label asp-for="FormFiles">Select Images:</label>
                </dt>
                <dd>
                    <input asp-for="FormFiles" type="file" multiple>
                </dd>
            </dl>

            <div class="input-group input-group-sm mb-3 w-50">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Description</span>
                </div>
                <input asp-for="Auto.Description" name="Description" type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>

            <button type="submit" asp-action="OnCreateAd" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

