@model APCassandra.Controllers.AutoController

@{
    ViewData["Title"] = "Detail";
}

    <div class="container pt-3">
        <div class="row">
            <div class="col-6">
                <img src="/images/@Model.Auto.ShowImage" class="img-fluid" alt="Responsive image">
            </div>
            <div class="col-6">
                <div class="d-flex flex-row justify-content-between">
                    <h3>@Model.Auto.Brand @Model.Auto.Model <span class="badge badge-primary">@Model.Auto.Price €</span></h3>
                </div>
                <div class="d-flex flex-row justify-content-between">
                    <h4>Year:</h4>
                    <h4>@Model.Auto.Year .</h4>
                </div>
                <div class="d-flex flex-row justify-content-between">
                    <h4>Type:</h4>
                    <h4>@Model.Auto.Type</h4>
                </div>
                <div class="d-flex flex-row justify-content-between">
                    <h4>Power:</h4>
                    <h4>@Model.Auto.Power HP</h4>
                </div>
                <div class="d-flex flex-row justify-content-between">
                    <h4>Volume:</h4>
                    <h4>@Model.Auto.Volume cm³</h4>
                </div>
                <div class="d-flex flex-row justify-content-between">
                    <h4>Color:</h4>
                    <h4>@Model.Auto.Color</h4>
                </div>
                <div class="d-flex flex-row justify-content-between">
                    <h4>Contact:</h4>
                    <h4><span class="badge badge-success">+381 @Model.Auto.Contact </span></h4>
                </div>
            </div>
        </div>
        <div id="carouselExampleControls" class="carousel slide w-100 mt-5" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Auto.ImagesList.Count; i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img src="/images/@Model.Auto.ImagesList[i]" class="d-block w-100" alt="...">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="/images/@Model.Auto.ImagesList[i]" class="d-block w-100" alt="...">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>